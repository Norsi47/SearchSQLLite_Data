<?xml version="1.0" encoding="utf-8"?>
<!--changed constraunt layout to cardview-->
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    app:cardElevation="8dp"
    android:layout_margin="8dp"
    android:layout_height="wrap_content">

<!--    for the bar at the top (whole box)
left mine on vertical on purpose to suite look-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="8dp"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

<!--        for the contact picture inside the box-->
        <ImageView
            android:src="@drawable/ic_baseline_account_box_24"
            android:layout_width="70dp"
            android:layout_height="70dp" />

<!--        this is under the picture inside box-->
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"></LinearLayout>


<!--customer name under image icon-->
        <TextView
            android:id="@+id/name"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical|start"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:text="Norsi Flex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/email"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical|start"
            android:textAllCaps="true"
            android:textStyle="italic"
            android:text="bnorsi@yahoo.com"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/phone"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical|start"
            android:textAllCaps="true"
            android:textStyle="italic"
            android:text="(123)456-0009"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/address"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical|start"
            android:textAllCaps="true"
            android:textStyle="normal"
            android:text="133 New York"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>

</androidx.cardview.widget.CardView>